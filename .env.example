# Configuration du Restaurant - Exemple
# Copiez ce fichier vers .env et configurez vos vraies valeurs

# ===== INFORMATIONS DU RESTAURANT =====
RESTAURANT_NAME="Restaurant Le Délice"
RESTAURANT_ADDRESS="123 Avenue de la Paix, Abidjan"
RESTAURANT_PHONE="+225 27 20 30 40 50"
RESTAURANT_EMAIL="contact@restaurant-delice.ci"
RESTAURANT_WEBSITE="www.restaurant-delice.ci"

# ===== BASE DE DONNÉES =====
DATABASE_URL="postgresql://user:password@localhost:5432/restaurant_db"
DB_POOL_SIZE=10
DB_TIMEOUT=30000

# ===== SÉCURITÉ =====
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="24h"
SESSION_SECRET="your-super-secret-session-key-here"
BCRYPT_ROUNDS=12

# ===== APPLICATION =====
NODE_ENV="development"
PORT=5000
BASE_URL="http://localhost:5000"
CORS_ORIGIN="*"
DEFAULT_LANGUAGE="fr"
TIMEZONE="Africa/Abidjan"

# ===== ORANGE MONEY =====
ORANGE_MONEY_ENABLED=true
ORANGE_MONEY_MERCHANT_ID="your-orange-merchant-id"
ORANGE_MONEY_API_KEY="your-orange-api-key"
ORANGE_MONEY_API_SECRET="your-orange-api-secret"
ORANGE_MONEY_WEBHOOK_URL="https://your-app.com/webhooks/orange-money"
ORANGE_MONEY_BASE_URL="https://api.orange.com/orange-money-webpay/dev/v1"

# ===== MTN MOBILE MONEY =====
MTN_MOMO_ENABLED=true
MTN_MOMO_SUBSCRIPTION_KEY="your-mtn-subscription-key"
MTN_MOMO_API_USER_ID="your-mtn-api-user-id"
MTN_MOMO_API_KEY="your-mtn-api-key"
MTN_MOMO_TARGET_ENVIRONMENT="sandbox"
MTN_MOMO_BASE_URL="https://sandbox.momodeveloper.mtn.com"

# ===== MOOV MONEY =====
MOOV_MONEY_ENABLED=true
MOOV_MONEY_MERCHANT_ID="your-moov-merchant-id"
MOOV_MONEY_API_KEY="your-moov-api-key"
MOOV_MONEY_API_SECRET="your-moov-api-secret"
MOOV_MONEY_BASE_URL="https://api.moov-africa.ci"

# ===== WAVE =====
WAVE_ENABLED=true
WAVE_API_KEY="your-wave-api-key"
WAVE_SECRET_KEY="your-wave-secret-key"
WAVE_MERCHANT_ID="your-wave-merchant-id"
WAVE_BASE_URL="https://api.wave.com"

# ===== BUSINESS CONFIGURATION =====
TAX_RATE=18
SERVICE_CHARGE=10
DELIVERY_FEE=1000
MINIMUM_ORDER=2000
PAYMENT_TIMEOUT=30000

# ===== NOTIFICATIONS =====
SMS_ENABLED=false
EMAIL_ENABLED=false
PUSH_ENABLED=true
SMS_PROVIDER="nexah"
SMS_API_KEY="your-sms-api-key"
SMS_SENDER_ID="RESTAURANT"

# ===== QR CODES =====
QR_BASE_URL="https://your-app.replit.app"
QR_LOGO_URL=""
QR_SIZE=256
QR_MARGIN=4

# ===== FICHIERS =====
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# ===== LOGS =====
LOG_LEVEL="info"
LOG_FILE_ENABLED=false
LOG_FILE_PATH="logs/app.log"